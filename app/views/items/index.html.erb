<% end %>


<div class="d-flex p-12 bd-highlight">
  <% @items.each do |item| %>

      <div class="card" style="width: 18rem;">
        <img class="card-img-top" src="https://media-cldnry.s-nbcnews.com/image/upload/newscms/2020_25/3390425/board-games-kr-2x1-tease-200616.jpg" alt="Card image cap">
        <div class="card-body">
          <h5 class="card-title"><%= link_to item.title, item%></h5>
            <p class="card-text">
              Opis: <%= item.description %> <br>
              Stan: <%= item.condition %> <br>
              Autor: <%= item.author %> <br>
              <a href="#" class="btn btn-primary">Wymień się!</a>
              <%= button_to 'Usuń', @item, method: :delete %>
            </p>
        </div>
      </div>

  <% end %>
</div>

