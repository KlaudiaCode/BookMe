<h1 class="text-center mt-4">MOJE OFERTY</h1>

<% flash.each do |key, value| %>
  <div class="alert alert-<%= key %>"><%= value %></div>
<% end %>
<h5 class="text-center">WYSŁANE</h5>
<div class="d-flex p-12 bd-highlight">
  <% @my_trades.each do |trade| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= trade.status%></h5>
            <p class="card-text">
              Wymienię: <%= trade.trader_item.title %> <br>
              Za: <%= trade.owner_item.title %> <br>
              Od: <%= trade.owner.username %> <br>
              <%= link_to 'REZYGNUJ', items_path, class:"btn btn-outline-warning"%>
            </p>
        </div>
      </div>
  <% end %>
</div>
<h5 class="text-center">OTRZYMANE</h5>
<div class="d-flex p-12 bd-highlight">
  <% @received_trades.each do |trade| %>
      <div class="card" style="width: 18rem;">
        <div class="card-body">
          <h5 class="card-title"><%= trade.status%></h5>
            <p class="card-text">
              Wymienię: <%= trade.trader_item.title %> <br>
              Za: <%= trade.owner_item.title %> <br>
              Od: <%= trade.owner.username %> <br>
              <%= link_to 'AKCEPTUJ', items_path, class:"btn btn-outline-primary"%>
              <%= link_to 'ODRZUĆ', items_path, class:"btn btn-outline-danger"%>
            </p>
        </div>
      </div>
  <% end %>
</div>