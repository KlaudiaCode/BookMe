<div class="row gx-3 gy-3 mb-4">
  <% @my_trades.each do |trade| %>
    <%= render partial: 'trade', locals: { trade: trade,
                                           my_item: trade.trader_item,
                                           other_item: trade.owner_item,
                                           owned: true } %>
