<h1 class="text-center mt-4">
  <% if @can_edit %>
    TWOJE KONTO
  <% else %>
  <%= @user.username %>
  <% end %>
</h1>

<div class='d-flex'>
  <div class="bg-white rounded p-4 flex-grow-1 shadow">
    <% if @user.place && @user.place != "" %>
      <h6><i class="bi-geo-alt-fill"></i> <%= @user.place %></h6>
    <% end %>
  
    <h6> <%= @user.bio && @user.bio != "" ? @user.bio : "Ten użytkownik nie podał żadnych informacji o sobie." %></h6>

    <% if @can_edit %>
      <hr/>
      <h5>Dane osobowe</h5>
      <h6>Imię: <%= @user.name %></h6>
      <h6>Nazwisko: <%= @user.surname %></h6>
      <h6>Email: <%= @user.email %></h6>
      <%= link_to edit_user_path, class: 'btn btn-primary w-100' do %> 
        <i class="bi-pencil-fill"></i> Edytuj
      <% end %>
    <% end %>
  </div>
</div>

<div class="d-flex flex-column">
  <h1 class="text-center mt-4">PÓŁKA</h1>

  <div class="row g-3 mb-5">
    <% @user.items.each do |item| %>
      <%= render partial: 'items/item', locals: { item: item, can_edit: @can_edit, in_trade: false } %>
    <% end %>
  </div>
</div>
