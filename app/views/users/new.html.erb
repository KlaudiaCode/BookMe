<h1 class="text-center mt-4">REJESTRACJA</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">

    <% flash.each do |key, value| %>
      <div class="alert alert-<%= key %>"><%= value %></div>
    <% end %>

    <%= form_with model: @user do |form| %>
      <div>
        <%= form.label :name, 'Imię' %><br>
        <%= form.text_field :name %>
      </div>

      <div>
        <%= form.label :surname, 'Nazwisko' %><br>
        <%= form.text_field :surname %>
      </div>

      <div>
        <%= form.label :username, 'Login' %><br>
        <%= form.text_field :username %>
      </div>

      <div>
        <%= form.label :email, 'E-mail' %><br>
        <%= form.text_field :email %>
      </div>

      <div>
        <%= form.label :password_digest, 'Hasło' %><br>
        <%= form.text_field :password_digest %>
      </div>

      <div>
        <%= form.submit 'Dodaj' %>
      </div>
    <% end %>

    </div>
  </div>
  <%= link_to '[ Powrót do strony głównej ]', items_path, class: "text-info" %>
</div>
